---
import "@/styles/global.css";
import { ViewTransitions } from "astro:transitions";
interface Props {
    title: string;
    description: string,
    image: string
}
const { title , description="Blog con Astro de Prueba" , image="/assets/placeholder-1.jpg" } = Astro.props;


const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---


<head>
    <!--Global Meta Datos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    <link
        rel="preload"
        href="/fonts/ProductSans-Bold.ttf"
        as="font"
        type="font/ttf"
        crossorigin
    />
    <link
        rel="preload"
        href="/fonts/ProductSans-Light.ttf"
        as="font"
        type="font/ttf"
        crossorigin
    />
    <link
        rel="preload"
        href="/fonts/ProductSans-Medium.ttf"
        as="font"
        type="font/ttf"
        crossorigin
    />
    <link
        rel="preload"
        href="/fonts/ProductSans-Regular.ttf"
        as="font"
        type="font/ttf"
        crossorigin
    />

    <!--Canonical Url  -->

    <link rel="canonical" href={canonicalURL}>
    
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <title>{title}</title>
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image,Astro.url)} />

    <!--Twitter -->

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image,Astro.url)} />

    <!--Transiccion -->
    <ViewTransitions />
</head>